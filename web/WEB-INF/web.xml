<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
<welcome-file-list>
    <welcome-file>home</welcome-file>
</welcome-file-list>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ictgradschool.project.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>ictgradschool.project.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ictgradschool.project.servlets.LogOutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Homepage</servlet-name>
        <servlet-class>ictgradschool.project.servlets.GetArticlesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Homepage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>ictgradschool.project.servlets.SearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadProfilePictureServlet</servlet-name>
        <servlet-class>ictgradschool.project.servlets.UploadProfilePictureServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UploadProfilePictureServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddArticle</servlet-name>
        <servlet-class>ictgradschool.project.servlets.AddArticleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddArticle</servlet-name>
        <url-pattern>/new-article</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewArticle</servlet-name>
        <servlet-class>ictgradschool.project.servlets.GetSingleArticleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewArticle</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>ictgradschool.project.servlets.UploadProfilePictureServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteArticle</servlet-name>
        <servlet-class>ictgradschool.project.servlets.DeleteArticleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/Upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteArticle</servlet-name>
        <url-pattern>/single-article</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddComment</servlet-name>
        <servlet-class>ictgradschool.project.servlets.AddCommentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddComment</servlet-name>
        <url-pattern>/addcomment</url-pattern>
    </servlet-mapping>



</web-app>